@model IEnumerable<TarOh.Models.Spread>

@{
    ViewData["Title"] = "ViewSavedSpread";
}



    
@foreach (var item in Model) {
        
         
            <h1>@item.Name</h1>
          

         @foreach(var savedSpread in item.SavedSpreads)
         {
             if (savedSpread.CardDirection == true)
             {  
                <p>
                   Direction: Up || 
                   Card: @savedSpread.Card.CardType.Name || 
                   Ordinal Position: @savedSpread.OrdinalPosition.Name
                </p>
             }
             else
             {
                <p>
                    Direction: Down || 
                    Card: @savedSpread.Card.CardType.Name ||
                    Ordinal Position: @savedSpread.OrdinalPosition.Name
                </p>
             }
         }
            
}
    

