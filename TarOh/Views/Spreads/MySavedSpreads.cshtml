@model IEnumerable<TarOh.Models.Spread>

@{
    ViewData["Title"] = "MySavedSpreads";
}
 
    <div class="spreadsTitle"><h1>Your Spreads</h1></div>
<div class="mySpreads">
    @foreach (var item in Model)
    {
    <div class="display">
        <div class="card-container">
            <div class="card">
                <div class="side cardz"><img class="" src="~/img/card_back_black.png" alt="Playing Card"></div>
                <div class="side back"><a asp-action="ViewSavedSpread" asp-route-id="@item.SpreadId">@item.Name</a> <span>@item.ReadingDate</span></div>
            </div>

        </div>
        <form asp-action="Delete" asp-controller="Spreads" asp-route-id="@item.SpreadId"><button type="submit" class="btn btn-danger">Delete</button></form>
    </div>
    }
</div>

   
