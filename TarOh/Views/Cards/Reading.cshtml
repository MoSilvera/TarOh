                        }
                        else if (i == 1 && item.Cards[i].CardDirection == false)
                        {
                            <img data-toggle="modal" data-target="#dynamicCard1" id="card-1" class=" card-face invert" src="/img/@item.Cards[i].ImagePath" />
                        }
                        else if (i == 1 && item.Cards[i].CardDirection == true)
