                @for (int i = 3; i < 4; i++)
                {
                    if (item.Cards[i].CardDirection == true)
                    {
                        <img data-toggle="modal" data-target="#dynamicCard3" class=" card-face" src="/img/@item.Cards[i].ImagePath" />
                    }
                    else
